<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_business_detail_h_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/home_fenlei_layout</item>
    </style>

    <!-- 分类竖线 -->
    <style name="style_business_detail_v_view">
        <item name="android:layout_width">0.1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@color/home_fenlei_layout</item>
    </style>
    <!-- 热词样式 -->
    <style name="style_business_detail_hot_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/drawable_business_detail_hot_text</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>
    <!-- 推荐菜 -->
     <style name="style_business_detail_commodity_img">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_margin">10dp</item>
    </style>
       

</resources>