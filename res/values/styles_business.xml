<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 类型选择 -->
    <style name="style_business_type_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/home_fenlei_font</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawableRight">@drawable/classify_home_xiangxia_button</item>
    </style>
	
    <!-- 分类竖线 -->
    <style name="style_business_type_view">
        <item name="android:layout_width">0.1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@color/home_fenlei_layout</item>
    </style>

</resources>