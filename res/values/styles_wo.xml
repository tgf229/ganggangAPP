<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- wo de view 线 -->
    <style name="style_wo_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:background">@color/home_fenlei_layout</item>
    </style>
    <!-- 我单个layout -->
    <style name="style_wo_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>
    <!-- layout img -->
    <style name="style_wo_img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>
    <!-- layout text -->
    <style name="style_wo_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">70dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- layout right img -->
    <style name="style_wo_right_img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

</resources>