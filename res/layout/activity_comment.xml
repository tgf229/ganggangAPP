<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/comment_comment_editText"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_round_edittext"
        android:gravity="center"
        android:hint="@string/comment_edittext_hint"
        android:inputType="textMultiLine"
        android:maxLines="8"
        android:minLines="5"
        android:scrollbars="vertical"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/activity_comment_sub_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/activity_comment_sub"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/ganggang_color"
            android:text="@string/comment_submit_button"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="@string/comment_comment"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/activity_comment_title_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10sp"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <View style="@style/style_business_detail_h_view" />

    <ListView
        android:id="@+id/activity_comment_listview"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:divider="@color/bg_color"
        android:dividerHeight="1dp" >
    </ListView>

</LinearLayout>