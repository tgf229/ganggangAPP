<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     xmlns:mobile="http://rong.android.TextView"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/white"
    android:orientation="horizontal" >

    <!-- 店img -->

    <ImageView
        android:id="@+id/layout_homebusiness_img"
        style="@style/style_fragment_home_fenlei_img_business"
        android:scaleType="fitXY"
        android:src="@drawable/moren_smail" />
    <!-- 店名 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/layout_homebusiness_name"
            style="@style/style_fragment_home_fenlei_name_business"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layout_homebusiness_location_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/layout_homebusiness_location_img"
                    style="@style/style_fragment_home_fenlei_localtion_img_business"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/huise_button" />
                <!-- 店地址 -->

                <TextView
                    android:id="@+id/layout_homebusiness_location"
                    style="@style/style_fragment_home_fenlei_localtion_business"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text=""
                    />
            </LinearLayout>
            <!-- 电话img -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.8"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/layout_homebusiness_phone_img"
                    style="@style/style_fragment_home_fenlei_phone_img_business"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/dianhua_icon" />
                <!-- 电话号码 -->

                <TextView
                    android:id="@+id/layout_homebusiness_phone"
                    style="@style/style_fragment_home_fenlei_phone_business"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text=""
                   />
                <!-- 店 距离@string/home_text_fenlei_location1 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/layout_homebusiness_location_juli"
                        style="@style/style_fragment_home_fenlei_juli_business"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:maxLines="1"
                        android:text=""
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>