<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color" >

    <!-- 广告部分 -->

    <ProgressBar
        android:id="@+id/fragment_module_business_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <com.ganggang.frame.constant.refresh.PullToRefreshLayout
        android:id="@+id/fragment_module_business_refresh"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#383838"
        android:orientation="vertical" >

        <include layout="@layout/list_refresh_head" />

        <include layout="@layout/list_refresh_view" />

        <include layout="@layout/list_load_more" />
    </com.ganggang.frame.constant.refresh.PullToRefreshLayout>

</RelativeLayout>